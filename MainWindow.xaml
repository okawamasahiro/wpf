<Window x:Class="wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPTサンプル" Height="350" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 入力欄 -->
        <TextBox x:Name="InputTextBox"
                 Height="30"
                 FontSize="14"
                 Margin="0,0,0,10"/>

        <!-- GPT の返答 -->
        <TextBox x:Name="ResponseTextBox"
                 Grid.Row="1"
                 FontSize="14"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"/>

        <!-- 生成された画像表示 -->
        <Border Grid.Row="2"
                Margin="0,10,0,0"
                BorderBrush="Gray"
                BorderThickness="1">
            <ScrollViewer>
                <Image x:Name="GeneratedImage"
                       Stretch="Uniform" />
            </ScrollViewer>
        </Border>
        
        <!-- ボタン -->
        <Button Content="送信"
                Grid.Row="3"
                Width="100"
                Height="35"
                HorizontalAlignment="Right"
                Click="SendButton_Click"/>
    </Grid>
</Window>