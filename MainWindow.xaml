<Window x:Class="wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="文字入力サンプル" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="指示を入力してください：" Margin="0,0,0,5"/>

            <!-- 文字入力欄 -->
            <TextBox x:Name="NameTextBox"
                     Height="25"
                     FontSize="14"
                     Margin="0,0,0,10" />

            <!-- 入力内容を表示するボタン -->
            <Button Content="表示"
                    Width="80"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>